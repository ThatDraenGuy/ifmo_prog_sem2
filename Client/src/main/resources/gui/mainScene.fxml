<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.mainScene.MainSceneView">
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <TabPane fx:id="tabPane" layoutX="251.0" layoutY="176.0" minHeight="300.0"
                         tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <tabs>
                        <Tab fx:id="tableTab" text="Table">
                            <content>
                                <AnchorPane fx:id="tablePlace"/>
                            </content>
                        </Tab>
                        <Tab fx:id="visualTab" text="Visual">
                            <content>
                                <AnchorPane minHeight="-Infinity" minWidth="-Infinity">
                                    <children>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" layoutX="166.0" layoutY="168.0"
                                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <content>
                                                <AnchorPane minHeight="-Infinity" minWidth="-Infinity">
                                                    <children>
                                                        <FlowPane fx:id="visual" hgap="10.0" layoutX="111.0"
                                                                  layoutY="100.0" vgap="10.0"
                                                                  AnchorPane.bottomAnchor="0.0"
                                                                  AnchorPane.leftAnchor="0.0"
                                                                  AnchorPane.rightAnchor="0.0"
                                                                  AnchorPane.topAnchor="0.0"/>
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </ScrollPane>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </AnchorPane>
    </center>
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <ProgressIndicator fx:id="progress" disable="true" layoutX="-1.0" AnchorPane.bottomAnchor="7.5"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="7.5"/>
                <Label fx:id="message" layoutX="-1.0" prefHeight="45.0" prefWidth="117.0" text="Label"
                       AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="0.0"/>
                <GridPane fx:id="infoGrid" hgap="10.0" layoutX="54.0" layoutY="-3.0" vgap="10.0"
                          AnchorPane.leftAnchor="270.0" AnchorPane.topAnchor="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="25.0" minHeight="10.0" prefHeight="24.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="39.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="accountLabel" text="Current account:"/>
                        <Label fx:id="account" text="account" GridPane.columnIndex="1"/>
                        <Label fx:id="serverLabel" text="Current server:" GridPane.rowIndex="1"/>
                        <Label fx:id="server" text="server" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label fx:id="localeLabel" text="Current language" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
                <ToolBar layoutX="240.0" AnchorPane.rightAnchor="0.0">
                    <items>
                        <Button fx:id="logOut" mnemonicParsing="false" onAction="#logOut" text="Log out"
                                textAlignment="CENTER"/>
                        <Button fx:id="changeServer" mnemonicParsing="false" onAction="#disconnect"
                                text="Change server"/>
                        <Button fx:id="exit" alignment="CENTER" mnemonicParsing="false" onAction="#exit" text="Exit"
                                textAlignment="CENTER"/>
                    </items>
                </ToolBar>
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <ButtonBar prefHeight="40.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="delete" mnemonicParsing="false" onAction="#delete" text="Delete"/>
                <Button fx:id="edit" mnemonicParsing="false" onAction="#edit" text="Edit"/>
                <Button fx:id="add" minWidth="53.0" mnemonicParsing="false" onAction="#add" prefHeight="24.0"
                        text="Add"/>
            </buttons>
        </ButtonBar>
    </bottom>
</BorderPane>
